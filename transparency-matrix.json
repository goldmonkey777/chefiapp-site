      "focus": "Growth metrics, team building, market expansion",
      "transparencyLevel": "high",
      "note": "Can share more metrics, still protect core IP"
    },
    "growth": {
      "description": "Established business, strong revenue",
      "focus": "Efficiency, profitability, market leadership",
      "transparencyLevel": "very high",
      "note": "Public company readiness, investor relations"
    }
  },
  "decisionFramework": {
    "questions": [
      "Does this build credibility or trust?",
      "Can this be easily copied by competitors?",
      "Does this expose vulnerabilities?",
      "Does this differentiate without revealing methods?",
      "Could this harm ongoing negotiations?",
      "Is this a verifiable result?",
      "Is this financially sensitive?",
      "Is this covered by NDA or contract?"
    ],
    "rules": [
      "If builds trust + not easily copied = PUBLIC",
      "If competitive advantage + can be copied = CONFIDENTIAL",
      "If required for fundraising = INVESTOR-ONLY with NDA",
      "If operational detail = INTERNAL-ONLY",
      "If trade secret or patent-pending = HIGHLY-CONFIDENTIAL"
    ]
  },
