  "visibilityLevels": {
    "public": {
      "description": "Anyone can see this",
      "channels": ["website", "social media", "press releases", "public docs"],
      "risk": "low",
      "benefit": "high credibility, trust, reach"
    },
    "investor-only": {
      "description": "Only for investors under NDA",
      "channels": ["pitch deck", "data room", "board meetings"],
      "risk": "medium",
      "benefit": "enables fundraising, due diligence",
      "requiresNDA": true
    },
    "internal-only": {
      "description": "Core team and authorized personnel only",
      "channels": ["internal wiki", "Slack", "team meetings"],
      "risk": "high if leaked",
      "benefit": "operational efficiency",
      "access": "team-only"
    },
    "confidential": {
      "description": "Highly sensitive, restricted access",
      "channels": ["encrypted storage", "need-to-know basis"],
      "risk": "very high if leaked",
      "benefit": "protects competitive advantage",
      "access": "authorized-only"
    },
    "permission-required": {
      "description": "Requires explicit written permission",
      "channels": ["case studies", "testimonials", "partner pages"],
      "risk": "legal if disclosed without permission",
      "benefit": "social proof when authorized"
    }
  },
  "maturityPhases": {
    "seed": {
